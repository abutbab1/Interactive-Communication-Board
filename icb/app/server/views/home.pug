
extends layout

block content
	- user = typeof(udata) != 'undefined' ? udata : { }
	if(user.classf == "Speech Therapist")
		nav.navbar.navbar-expand.navbar-light.bg-light
			.nav-item
				.navbar-brand Control Panel
				button.btn.navbar-btn.btn-outline-dark#btn-add ADD
			.navbar-nav.ml-auto
				.nav-item
					button.btn.navbar-btn.btn-outline-dark#btn-logout Sign Out
	else
		nav.navbar.navbar-expand.navbar-light.bg-light
			.nav-item
				.navbar-brand Control Panel
			.navbar-nav.ml-auto
				.nav-item
					button.btn.navbar-btn.btn-outline-dark#btn-logout Sign Out
	include account
	include modals/logout
	include modals/alert
	include modals/confirm

block scripts
	script(src='/js/views/home.js')
	script(src='/js/controllers/homeController.js')
	script(src='/js/form-validators/accountValidator.js')